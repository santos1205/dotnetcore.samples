@*OBS: SE TIVER MAIS DE UM COMPONENTE TOGGLE NA TELA, DEVERÁ SER INSTANCIADA C TNUMBERs DIFERENTES, PARA N DAR CONFLITO DE STILO.*@

@{
    string TName = ViewBag.TName;
    string JsSwitchName = string.Format("js-switch_{0}", ViewBag.TNumber);
    string IdToggle = "";
    if (!string.IsNullOrEmpty(ViewBag.TNumber))
    {
        IdToggle = string.Format("{0}-{1}", ViewBag.TName, ViewBag.TNumber);
    }
    else
    {
        IdToggle = ViewBag.TName;
    }

}

    
@if (ViewBag.TChecked == true)
{
    @Html.CheckBox(TName, new { @class = JsSwitchName, @Id = IdToggle, @Checked = ViewBag.TChecked })
}
else
{
    @Html.CheckBox(TName, new { @class = JsSwitchName, @Id = IdToggle })
}
    

<script>
    var elem_@ViewBag.TNumber = document.querySelector('.@JsSwitchName');
    var switchery_@ViewBag.TNumber = new Switchery(elem_@ViewBag.TNumber, { color: '@ViewBag.TColor' });    
</script>