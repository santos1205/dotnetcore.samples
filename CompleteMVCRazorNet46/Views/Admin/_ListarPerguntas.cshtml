@if (ViewBag.Perguntas != null)
{
    <div class="ibox float-e-margins" style="margin-top: 15px">
        <div class="ibox-title">
            <h5>Lista perguntas por questionário</h5>
        </div>
        <div class="ibox-content">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Classificação</th>
                        <th>Pergunta</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        int auxCont = 1;
                    }

                    @foreach (var item in ViewBag.Perguntas)
                    {
                        string ClsNome = "";
                        int IdClassificacao = 0;
                        if (item.Classificacao != null)
                        {
                            ClsNome = item.Classificacao.cls_nome;
                            IdClassificacao = item.Classificacao.cls_id;
                        }
                    <tr>
                        <td>@auxCont</td>
                        <td>@ClsNome</td>
                        <td>@item.prg_descricao</td>
                        <td>
                            <a href="@Url.Action("Pergunta", "Admin", new { IdQ = item.Questionario.qst_id, IdC = IdClassificacao, IdP = item.prg_id })"><i class="fa fa-pen text-navy"></i></a>
                            <a data-toggle="modal" href="#myModal2" onclick="javascript:document.getElementById('hdd-id-registro-selected').value = @item.prg_id;">
                                <i class="fa fa-times text-danger" style="padding-left: 5px"></i>
                            </a>
                        </td>
                    </tr>
                        auxCont++;
                    }
                </tbody>
            </table>
        </div>
    </div>

}   