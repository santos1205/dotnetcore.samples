
@if (ViewBag.Error != "")
{
    <h3 style="color: red">Erro - @ViewBag.Error</h3>
}
else
{
    <div class="ibox float-e-margins" style="margin-top: 15px">
        <div class="ibox-title">
            <h5>Lista de empresas</h5>
        </div>
        <div class="ibox-content">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>

                        <th>Empresa</th>
                        <th>Cidade</th>
                        <th>Estado</th>
                        <th>Ramo</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int auxCont = 1;
                    }

                    @foreach (var item in ViewBag.Empresas)
                    {
                    <tr>
                        <td>@auxCont</td>
                        <td>@item.emp_nome</td>
                        <td>@item.emp_cidade</td>
                        <td>@item.emp_estado</td>
                        <td>@item.emp_ramo</td>
                        <td>
                            <a href="@Url.Action("Empresa", "Admin", new { IdE = item.emp_id })"><i class="fa fa-pen text-navy"></i></a>
                            <a data-toggle="modal" href="#myModal2" onclick="javascript:document.getElementById('hdd-id-registro-selected').value = @item.emp_id;">
                                <i class="fa fa-times text-danger" style="padding-left: 5px"></i>
                            </a>
                        </td>
                    </tr>
                        auxCont++;
                    }

                </tbody>
            </table>
        </div>
    </div>

}