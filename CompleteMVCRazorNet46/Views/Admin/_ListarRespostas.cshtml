@if (ViewBag.Respostas != null)
{
    <div class="ibox float-e-margins" style="margin-top: 15px">
        <div class="ibox-title">
            <h5>Lista respostas por questionário</h5>
        </div>
        <div class="ibox-content">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Resposta</th>
                        <th>Valor</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        int auxCont = 1;
                    }

                    @foreach (var item in ViewBag.Respostas)
                    {
                        var Valor = item.Valor;
                        string strValor = "<não informado>";
                        if (Valor != null)
                        {
                            if (Valor.Count > 0)
                            {
                                foreach (var vlr in Valor)
                                {
                                    strValor = vlr.vlr_valor == "" ? "<não informado>" : vlr.vlr_valor;
                                }
                            }
                        }
                        <tr>
                            <td>@auxCont</td>
                            <td>@item.rsp_descricao</td>
                            <td>@strValor</td>
                            <td>
                                <a href="@Url.Action("Resposta", "Admin", new { IdQ = item.Questionario.qst_id, IdR = item.rsp_id })"><i class="fa fa-pen text-navy"></i></a>
                                <a data-toggle="modal" href="#myModal2" onclick="javascript:document.getElementById('hdd-id-registro-selected').value = @item.rsp_id;">
                                    <i class="fa fa-times text-danger" style="padding-left: 5px"></i>
                                </a>
                            </td>
                        </tr>
                        auxCont++;
                    }

                </tbody>
            </table>
        </div>
    </div>

}